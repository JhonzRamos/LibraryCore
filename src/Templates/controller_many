	/**
	 * Display the specified resource.
	 *
	 * @param  int  $id
	 * @return \Illuminate\Http\Response
	 */
	public function show($id)
	{
		$$RESOURCE$ = $MODEL$::find(decrypt($id));

		$old_$REFERENCE$= array();

		foreach ($$RESOURCE$->$REFERENCE$ as $key) {
					$old_$REFERENCE$[]= $key->$REFERENCE$_id;
		}

